# --- Force Fortran detection
*.f      linguist-language=Fortran
*.for    linguist-language=Fortran
*.f90    linguist-language=Fortran
*.f95    linguist-language=Fortran
*.F      linguist-language=Fortran
*.F90    linguist-language=Fortran
*.F95    linguist-language=Fortran

# --- Hide plotting scripts entirely
*.plt linguist-detectable=false
*.gp  linguist-detectable=false
*.gnu linguist-detectable=false

# --- Hide results/data (often large and miscounted)
results/**     linguist-detectable=false
data/**        linguist-detectable=false
*.dat          linguist-detectable=false
*.csv          linguist-detectable=false
*.txt          linguist-detectable=false

# --- Exclude build artefacts
*.o            linguist-generated
*.mod          linguist-generated
*.a            linguist-generated
build/**       linguist-generated

# --- Images/binaries donâ€™t count
images/**      linguist-generated
*.png          linguist-generated
*.jpg          linguist-generated
*.jpeg         linguist-generated
*.pdf          linguist-documentation

# --- Docs, citations, licenses donâ€™t count
*.md           linguist-documentation
citation/**    linguist-documentation
CITATION.cff   linguist-documentation
LICENSE        linguist-documentation
